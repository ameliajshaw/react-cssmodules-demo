.header
  width 100%
  height 650px
  background: linear-gradient(90deg, #83a4d4 10%, #b6fbff 90%)

.wrapper
  margin 0 auto
  padding 0 40px
  max-width 1100px
  position relative

.title
  display block
  text-align center
  color rgb(251, 251, 251)
  font-weight 800
  padding-top 30px
  font-size 6em

.container
  position relative
  margin 80px auto
  width 200px
  height 200px
  transition all cubic-bezier(0.895, 0.03, 0.685, 0.22) 200ms

block()
  background-color rgba(255, 255, 255, 0.97)
  opacity .6
  width 100px
  height 100px
  position absolute
  transition all cubic-bezier(0.895, 0.03, 0.685, 0.22) 400ms

.block
  &-text
    opacity: 0
    position absolute
    bottom 0px
    left 10px
    text-transform uppercase
    color rgba(255, 255, 255, 0.97)
    font-size 3.15em
