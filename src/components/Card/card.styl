.card
  opacity 0
  position relative
  top 0px
  left 30px
  width 270px
  height 360px
  border-radius 4px
  background-color rgb(255, 255, 255)
  border 1px solid rgb(210, 210, 210)
  transition all ease .3s

.userpick
  opacity 0
  position relative
  margin 30px auto 0
  width 130px
  height 130px
  border-radius 75px
  background url('file!./taylor.jpg') center center
  background-size: 130px 130px
  border 3px solid rgb(255, 255, 255)
  &:before
    content: ' '
    position: absolute;
    z-index: 100;
    border-radius 75px
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    border: 5px solid rgb(222, 219, 219);

.username
  opacity 0
  margin-top 20px
  text-align center
  font-weight 800
  font-size 1.4em
  color rgb(87, 87, 87)

.about
  opacity 0
  text-align center
  padding 10px

.button
  opacity 0
  position absolute
  bottom 0
  width 270px
  height 50px
  line-height 50px
  border-radius 0 0 3px 3px
  text-align center
  font-weight 800
  text-transform uppercase
  color rgb(255, 255, 255)
  background-color rgb(60, 209, 97)
  letter-spacing .5px
  border 1px solid rgb(60, 209, 97)
  &:hover
    cursor pointer
